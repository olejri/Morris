<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_fill_fill"
    android:background="@drawable/meny_background"
    android:orientation="vertical" >

    <include layout="@layout/header" >
    </include>

    <LinearLayout
        style="@style/layout_fill_fill"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/menu_button_creategame"
            style="@style/button_style_menu"
            android:layout_below="@+id/header"
            android:drawableLeft="@drawable/icon_networkgame"
            android:text="Create Game" />

        <Button
            android:id="@+id/menu_button_joingame"
            style="@style/button_style_menu"
            android:layout_below="@id/menu_button_creategame"
            android:drawableLeft="@drawable/icon_networkgame"
            android:text="Join Game" />

        <Button
            android:id="@+id/menu_button_show_board"
            style="@style/button_style_menu"
            android:layout_below="@+id/menu_button_joingame"
            android:drawableLeft="@drawable/icon_multiplayer"
            android:text="Local game" />

        <Button
            android:id="@+id/menu_button_achievements"
            style="@style/button_style_menu"
            android:layout_below="@+id/menu_button_show_board"
            android:drawableLeft="@drawable/icon_achive"
            android:text="Achievements" />

        <Button
            android:id="@+id/menu_button_help"
            style="@style/button_style_menu"
            android:layout_below="@+id/menu_button_achievements"
            android:background="@drawable/color_button_black"
            android:drawableLeft="@drawable/icon_help"
            android:text="Help" />
    </LinearLayout>

</RelativeLayout>